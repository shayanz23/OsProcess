@page
@using System.Diagnostics
@model IndexModel
@{
    ViewData["Title"] = "OS Processes";
    Process[]? processes = ViewData["P"] as Process[];
    double totalRam = ViewData["totalRam"] as double? ?? 0;
    double totalCPU = ViewData["totalCPU"] as double? ?? 0;
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]!</h1>
        @foreach (var item in processes!)
        {
            @if (item.ProcessName.Trim().Length > 0)
            {
                <p><a asp-page="./Details" asp-route-id="@item.Id">@item.ProcessName</a></p>
            }
        }
        <h2>Total</h2>
        <p>Number of proccesses: @processes.Length</p>
        <p>Total ram used: @totalRam GB</p>
        <p>Total CPU used: @totalCPU hours</p>
</div>